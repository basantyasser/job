@model WebApplication1.Models.Profile
<head>
    <link href="~/Content/Style.css" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript"></script>
</head>
<div>@if (@ViewBag.Message != null)
{
    <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
    </script>
}</div>
<div class="form-horizontal">
    <br />
    <div class="profile-content">
        <h3>Register</h3>
        @using (Html.BeginForm())
        {
                            <input type="text" id="fullname" class="form-control" placeholder="User Name" name="txtname" required>
                            <input type="email" id="fullname" class="form-control" placeholder="Email Address" name="email" required>
                             <input type="password" id="fullname" class="form-control" placeholder="Enter Password" name="txtpass"  required>
                            <input type="text" placeholder="Enter Address" id="fullname" class="form-control" name="address" required>
                            @Html.DropDownListFor(c => c.RoleId, new List<SelectListItem> {
    new SelectListItem { Text = "User", Value = "1" },
    new SelectListItem { Text = "Publisher", Value = "2" },
    new SelectListItem { Text = "Admin", Value = "3" } },
"-- Please select --", new { @class = " form-control", style = "width:  227px;" })   
            <button type="submit" value="Register">Register</button>
        }
    </div>
</div>



